    <RelativeLayout
        android:id="@+id/rlDistanceTaxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" >

        <ImageButton
            android:id="@+id/imgNextDistance"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_next_selector"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/imgTaxi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/imgNextDistance"
            android:background="@drawable/button_taxi_selector"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tvDistanceTaxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgTaxi"
            android:text="@string/distance_taxi"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ALL_gray" />

    <ListView
        android:id="@+id/activity_main_menu_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000" >
    </ListView>

