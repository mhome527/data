<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/congratulationView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TransparentBlack3"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:visibility="gone"/>

<!--         <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/oval"
            android:gravity="center"
            android:minWidth="404dp"
            android:text="@string/app_name"
            android:textColor="#154632"
            android:visibility="gone" /> -->

        <LinearLayout
            android:id="@+id/layout_bottom_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btnReplay"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_press"
                android:text="@string/replay"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnChoice"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_press"
                android:text="@string/choice"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rlanimation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/imgCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:visibility="gone" /> 

        <puzzle.slider.vn.animation.ParticleAnimationView
            android:id="@+id/particleAnimationView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rlTextanimation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>