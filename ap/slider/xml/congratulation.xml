<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/congratulationView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_bg"
    android:orientation="vertical" >
	<FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_centerInParent="true"
	    	    
	    >
		
		<ImageView
	        android:id="@+id/imgItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:src="@drawable/miss"
	         android:layout_gravity="center"/>

		<TextView
		    android:id="@+id/txtMessage"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="top|center_horizontal"
		    android:background="@drawable/oval"
		    android:gravity="center"
		    android:text="Large Text"
		    android:textColor="#154632"
		     android:minWidth="404dp"/>
		
		<LinearLayout
		    android:id="@+id/layout_bottom_control"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom|center_horizontal"
		    android:gravity="center_horizontal">

		    <ImageView
		        android:id="@+id/btnleft"
		        android:layout_width="130dp"
		        android:layout_height="30dp"
		        android:background="@drawable/selectorbuttonleftcongratulation"
		        />

		    <ImageView
		        android:id="@+id/btnmid"
		        android:layout_width="130dp"
		        android:layout_height="30dp"
		        android:background="@drawable/selectorbuttonmidcongratulation" 
		        android:layout_marginLeft="10dp"/>

		    <ImageView
		        android:id="@+id/btnright"
		        android:layout_width="130dp"
		        android:layout_height="30dp"
		        android:background="@drawable/selectorbuttonrightcongratulation" 
		        android:layout_marginLeft="10dp" 
		        />
		</LinearLayout>
    
	</FrameLayout>        

	<RelativeLayout
        android:id="@+id/rlanimation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >
		
	    <ImageView
        android:id="@+id/imgCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon" />
        
	   <puzzle.slider.vn.animation.ParticleAnimationView
	        android:id="@+id/particleAnimationView1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:visibility="visible"/>
	
	   <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:id="@+id/rlTextanimation" >
	    </RelativeLayout>
	    
    </RelativeLayout>
	
    
   
</RelativeLayout>